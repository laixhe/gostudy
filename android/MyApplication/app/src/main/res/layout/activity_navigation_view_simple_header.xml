<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?attr/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_view_simple_header_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/golang_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/navigation_view_simple_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="laixhe"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_view_simple_header_icon" />

    <TextView
        android:id="@+id/navigation_view_simple_header_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="laixhe@laixhe.com"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_view_simple_header_username" />

</androidx.constraintlayout.widget.ConstraintLayout>